---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Portfolio projektów GitHub - Filip Misiak' } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Devicons for technology icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css">
  </head>
  <body class="bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 min-h-screen">
    <!-- Header -->
    <header class="fixed top-0 left-0 right-0 z-50 bg-slate-900/80 backdrop-blur-md border-b border-purple-500/30">
      <nav class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <a href={base} class="text-2xl font-bold text-white hover:text-purple-400 transition-colors">
            Filip Misiak
          </a>
          
          <div class="flex items-center gap-6">
            <a 
              href="https://github.com/misiakfilip" 
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-300 hover:text-purple-400 transition-colors"
            >
              GitHub
            </a>
            <a 
              href="https://linkedin.com/in/twoj-profil" 
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-300 hover:text-purple-400 transition-colors"
            >
              LinkedIn
            </a>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main content -->
    <main class="pt-20">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="mt-20 py-8 border-t border-purple-500/30">
      <div class="max-w-7xl mx-auto px-6 text-center text-gray-400">
        <p>© {new Date().getFullYear()} Filip Misiak. Wszystkie projekty automatycznie pobierane z GitHub.</p>
      </div>
    </footer>
  </body>
</html>